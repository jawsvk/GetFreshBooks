@model GetFreshBooks.Models.Message

@{
    ViewBag.Title = "Contact Us";
}
<h2>Contact Us</h2>
<div class="row">
    <p>Please fill in this form:</p>
</div>

<div class="row">
    @using (Html.BeginForm("Index", "Message"))
    {
        <div class="form-group">
            @Html.LabelFor(x => x.CustomerName, "Customer Name")
            @Html.TextBoxFor(x => x.CustomerName, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.CustomerName)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Email, "Email Address")
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.MessageBody, "Message")
            @Html.TextAreaFor(x => x.MessageBody, new { @class = "form-control", rows = 5 })
            @Html.ValidationMessageFor(x => x.MessageBody)
        </div>
        <div class="form-group">
            <input class="btn btn-primary pull-right" type="submit" text="Submit">
        </div>
    }
</div>