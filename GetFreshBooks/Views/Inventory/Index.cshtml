<h2>Inventory Management</h2>

@* Load datatable css *@
<link href="//cdn.datatables.net/1.10.9/css/jquery.dataTables.min.css" rel="stylesheet" />

<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="AddNewBook(0)">Add New Book</a> <br /><br />
    <table id="myTable">
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Title</th>
                <th>Category ID</th>
                <th>ISBN</th>
                <th>Author</th>
                <th>Stock</th>
                <th>Price</th>

            </tr>
        </thead>

    </table>
</div>
<style>
    tr.even {
        background-color: #F5F5F5 !important;
    }
</style>
@section Scripts{
<script src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.min.js"></script>
    <script>
            $(document).ready(function () {
            $('#myTable').DataTable({
                "ajax": {
                    "url": "/Inventory/loaddata",
                    "type": "GET",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "BookID", "autoWidth": true },
                    { "data": "Title", "autoWidth": true },
                    { "data": "CategoryID", "autoWidth": true },
                    { "data": "ISBN", "autoWidth": true },
                    { "data": "Author", "autoWidth": true },
                    { "data": "Stock", "autoWidth": true },
                    { "data": "Price", "autoWidth": true }

                ]
            });
        });

    function AddNewBook(BookID) {
            $("#form")[0].reset();
        $("#ModalTitle").html("Add New Book");
        $("#MyModal").modal();
    }

</script>
    }
@Html.Partial("~/Views/Shared/AddPopup.cshtml")
